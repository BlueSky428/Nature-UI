{
  "name": "@nature-ui/input",
  "version": "0.0.0",
  "description": "A React component for input text field",
  "keywords": [
    "react",
    "input",
    "text field",
    "nature ui",
    "react component",
    "validation",
    "form control"
  ],
  "author": "Divine Hycenth <divinehycenth8@gmail.com>",
  "homepage": "https://github.com/DNature/nature-ui",
  "license": "MIT",
  "main": "src/index.ts",
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DNature/nature-ui.git"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "bugs": {
    "url": "https://github.com/DNature/nature-ui/issues"
  },
  "dependencies": {
    "@nature-ui/form-control": "workspace:*"
  },
  "devDependencies": {
    "@nature-ui/icons": "workspace:*",
    "@nature-ui/layout": "workspace:*",
    "@nature-ui/system": "workspace:*",
    "@nature-ui/utils": "workspace:*",
    "clean-package": "^2.1.1",
    "react": "^18.0.0"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "gitHead": "cafae1d72b2a7027028454c22d4bbaebfdafba5f",
  "clean-package": "../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
