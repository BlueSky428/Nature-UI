{
  "name": "@nature-ui/core",
  "version": "2.2.14",
  "description": "Modular and accessible React UI components built with React, Tailwindcss, and Emotion",
  "author": "Divine Hycenth <divinehycenth8@gmail.com>",
  "homepage": "https://github.com/DNature/nature-ui",
  "license": "MIT",
  "main": "src/index.ts",
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DNature/nature-ui.git"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package"
  },
  "bugs": {
    "url": "https://github.com/DNature/nature-ui/issues"
  },
  "dependencies": {
    "@nature-ui/alert": "workspace:*",
    "@nature-ui/avatar": "workspace:*",
    "@nature-ui/breadcrumb": "workspace:*",
    "@nature-ui/button": "workspace:*",
    "@nature-ui/checkbox": "workspace:*",
    "@nature-ui/clickable": "workspace:*",
    "@nature-ui/close-button": "workspace:*",
    "@nature-ui/color": "workspace:*",
    "@nature-ui/container": "workspace:*",
    "@nature-ui/counter": "workspace:*",
    "@nature-ui/descendant": "workspace:*",
    "@nature-ui/drawer": "workspace:*",
    "@nature-ui/focus-lock": "workspace:*",
    "@nature-ui/form-control": "workspace:*",
    "@nature-ui/hooks": "workspace:*",
    "@nature-ui/icon": "workspace:*",
    "@nature-ui/image": "workspace:*",
    "@nature-ui/input": "workspace:*",
    "@nature-ui/layout": "workspace:*",
    "@nature-ui/modal": "workspace:*",
    "@nature-ui/number-input": "workspace:*",
    "@nature-ui/popover": "workspace:*",
    "@nature-ui/popper": "workspace:*",
    "@nature-ui/portal": "workspace:*",
    "@nature-ui/progress": "workspace:*",
    "@nature-ui/radio": "workspace:*",
    "@nature-ui/spinner": "workspace:*",
    "@nature-ui/system": "workspace:*",
    "@nature-ui/toast": "workspace:*",
    "@nature-ui/transition": "workspace:*",
    "@nature-ui/visually-hidden": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18",
    "framer-motion": ">=6.0.0"
  },
  "gitHead": "cafae1d72b2a7027028454c22d4bbaebfdafba5f",
  "devDependencies": {
    "clean-package": "^2.1.1",
    "react": "^18.0.0"
  },
  "clean-package": "../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
