{
  "name": "@nature-ui/visually-hidden",
  "version": "0.0.0-dev-20230409203113",
  "description": "A React component that visually hides it's content",
  "author": "Divine Hycenth <divinehycenth8@gmail.com>",
  "homepage": "https://github.com/DNature/nature-ui#readme",
  "license": "MIT",
  "keywords": [
    "react",
    "component",
    "nature ui",
    "a11y",
    "aria",
    "accessibility",
    "accessible",
    "visually hidden",
    "visually hidden component",
    "sr-only",
    "screenreader"
  ],
  "main": "dist/index.js",
  "directories": {
    "lib": "dist",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DNature/nature-ui.git"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast -- --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "bugs": {
    "url": "https://github.com/DNature/nature-ui/issues"
  },
  "dependencies": {
    "@nature-ui/utils": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "gitHead": "cafae1d72b2a7027028454c22d4bbaebfdafba5f",
  "devDependencies": {
    "@nature-ui/system": "workspace:*",
    "clean-package": "^2.1.1",
    "react": "^18.0.0"
  },
  "clean-package": "../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  },
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  }
}
