{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "target": "es5",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true, // FIXME: => false
    "skipLibCheck": true,
    "noEmit": false,
    "types": [
      "jest",
      "node",
      "react",
      "react-dom",
      "@testing-library/jest-dom",
      "@emotion/react"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "include": ["src", "packages", "*.config.js", "**/*/__test__/**/*", "website"]
}
