{
  "name": "nature-ui",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "^14"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "website/*",
      "src/*"
    ],
    "nohoist": [
      "packages/apps/**/webpack-dev-server"
    ]
  },
  "author": "Divine Hycenth <divinehycenth8@gmail.com>",
  "license": "MIT",
  "scripts": {
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "version:pkgs": "changeset version",
    "contributors:add": "all-contributors add",
    "contributors:gen": "all-contributors generate",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn build && yarn storybook",
    "lint": "lerna run lint --no-private --stream",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "test": "lerna run test --no-private --stream",
    "build": "lerna run build --ignore @nature-ui/test-utils --no-private --stream",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "build:tailwind": "postcss src/css/base.css -o src/css/tailwind.css",
    "storybook": "env NODE_ENV=development start-storybook -p 4000",
    "commit": "cz",
    "prettier": "prettier --write \"**/*.{ts,tsx,json,md,yml}\"",
    "prerelease": "yarn build",
    "release": "changeset publish"
  },
  "dependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.12.0",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@craco/craco": "^5.6.4",
    "@manypkg/cli": "^0.17.0",
    "@storybook/addon-essentials": "^6.1.10",
    "@storybook/addon-links": "^6.1.10",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.10",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/autoprefixer": "^9.7.2",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.3",
    "@types/postcss-import": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "all-contributors-cli": "^6.19.0",
    "autoprefixer": "^9.8.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "classnames": "^2.2.6",
    "clsx": "^1.1.1",
    "commitizen": "^4.2.2",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.3.0",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.13",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "postcss-cli": "^7.1.2",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-docgen-typescript": "^1.20.4",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.1",
    "react-icons": "^3.11.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "rimraf": "^3.0.2",
    "storybook": "^6.1.10",
    "style-loader": "^1.2.1",
    "tailwindcss": "^1.7.6",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
