{
  "name": "nature-ui",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "packages/apps/**/webpack-dev-server"
    ]
  },
  "author": "Divine Hycenth <divinehycenth8@gmail.com>",
  "license": "MIT",
  "scripts": {
    "update:check": "ncu",
    "update": "ncu -u",
    "prepare": "husky install .config/husky",
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "version:pkgs": "changeset version",
    "contributors:add": "all-contributors add",
    "contributors:gen": "all-contributors generate",
    "members:gen": "ts-node scripts/all-members.ts",
    "search-meta:gen": "ts-node scripts/get-search-meta.ts",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn build && yarn storybook",
    "lint": "lerna run lint --no-private --stream",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "test": "lerna run test --no-private --stream",
    "build": "lerna run build --ignore @nature-ui/test-utils --no-private --stream",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "build:tailwind": "postcss ./.storybook/style.css -o ./.storybook/tailwind.css",
    "storybook": "env NODE_ENV=development start-storybook -p 5001",
    "commit": "cz",
    "prettier": "prettier --write \"**/*.{ts,tsx,json,md,yml}\"",
    "prerelease": "yarn build",
    "v-release": "lerna run v-pub",
    "build:storybook": "build-storybook && sb extract",
    "release": "changeset publish",
    "docs": "yarn workspace @nature-ui/docs",
    "docs:build": "yarn docs build",
    "docs:dev": "yarn docs dev",
    "docs:start": "yarn docs start"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@manypkg/cli": "^0.19.1",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/autoprefixer": "^10.2.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.26",
    "@types/postcss-import": "^14.0.0",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "all-contributors-cli": "^6.20.0",
    "autoprefixer": "^10.4.5",
    "babel-preset-react-app": "^10.0.1",
    "chart.js": "^3.7.1",
    "classnames": "^2.3.1",
    "clsx": "^1.1.1",
    "commitizen": "^4.2.4",
    "concurrently": "^7.1.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-testing-library": "^5.3.1",
    "execa": "^6.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.0",
    "node-sass": "^7.0.1",
    "npm-check-updates": "^12.5.9",
    "postcss": "^8.4.12",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.1.0",
    "postcss-loader": "^6.2.1",
    "postcss-mixins": "^9.0.2",
    "postcss-preset-env": "^7.4.3",
    "prettier": "^2.6.2",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-chartjs-2": "^4.1.0",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.18.1",
    "react-icons": "^4.3.1",
    "react-lorem-component": "^0.13.0",
    "react-router-dom": "^6.3.0",
    "rimraf": "^3.0.2",
    "storybook": "^6.5.9",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.0.24",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "src/*"
    ]
  }
}
